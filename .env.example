# URLs de desarrollo - Estas son las únicas que necesitas configurar para servicios
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_API_BASE_URL=http://localhost:3001
PYTHON_API_BASE_URL=http://localhost:5000

# Variables públicas para que el frontend acceda a las APIs
NEXT_PUBLIC_NODE_API_URL=${NODE_API_BASE_URL}
NEXT_PUBLIC_PYTHON_API_URL=${PYTHON_API_BASE_URL} # Necesaria SOLO para check de status inicial

# Estas variables son obsoletas y se eliminarán
# BACKEND_URL=...
# NEXTAUTH_URL=...
# NEXT_PUBLIC_PYTHON_API_URL=...

# API URLs para el cliente (obsoleto si se usa NEXT_PUBLIC_NODE_API_URL)
# NEXT_PUBLIC_API_URL=/api

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Configuración de servicios (PORT se define en node-server/.env)
NODE_ENV=development
# PORT=3001 # Movido a node-server/.env

# Spotify API
SPOTIFY_CLIENT_ID=tu_client_id_de_spotify
SPOTIFY_CLIENT_SECRET=tu_client_secret_de_spotify
SPOTIFY_CALLBACK_URL=http://localhost:3000/api/auth/spotify/callback
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=tu_client_id_de_spotify
NEXT_PUBLIC_SPOTIFY_CALLBACK_URL=http://localhost:3000/api/auth/spotify/callback
SPOTIFY_API_LIMIT=100  # Límite recomendado para evitar throttling

# Last.fm API
LASTFM_API_KEY=tu_api_key_de_lastfm
LASTFM_SHARED_SECRET=tu_shared_secret_de_lastfm
LASTFM_API_LIMIT=200  # Límite recomendado para evitar throttling
LASTFM_REDIRECT_URI=http://localhost:3000/api/auth/lastfm/callback
NEXT_PUBLIC_LASTFM_API_KEY=tu_api_key_de_lastfm

# Deezer API
DEEZER_API_LIMIT=40  # Límite estricto: 50 llamadas cada 5 segundos
DEEZER_REDIRECT_URI=http://localhost:3000/api/auth/deezer/callback

# YouTube API
YOUTUBE_API_KEY=tu_api_key_de_youtube
NEXT_PUBLIC_YOUTUBE_API_KEY=tu_api_key_de_youtube
YOUTUBE_API_LIMIT=50  # Límite diario es bastante restrictivo

# OMDB API
OMDM_API_KEY=tu_api_key_de_omdb
NEXT_PUBLIC_OMDM_API_KEY=tu_api_key_de_omdb

# MongoDB
MONGODB_URI=mongodb://localhost:27017/freevibes

# Upstash para Rate Limiting (opcional)
UPSTASH_REDIS_REST_URL=tu_url_de_upstash
UPSTASH_REDIS_REST_TOKEN=tu_token_de_upstash

# JWT Secret
JWT_SECRET=tu_clave_secreta_jwt
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=tu_clave_secreta_refresh_token
JWT_REFRESH_EXPIRATION=7d

# NextAuth Secret
NEXTAUTH_SECRET=tu_secreto_para_nextauth

# Cache configuración
CACHE_TTL=86400000  # 24 horas en milisegundos
GENRE_CACHE_TTL=604800000  # 7 días en milisegundos
SEARCH_CACHE_TTL=3600000  # 1 hora en milisegundos

# Integración multi-fuente
ENABLE_LASTFM=true
ENABLE_DEEZER=true
ENABLE_SPOTIFY=true
ENABLE_YOUTUBE=true
PREFERRED_SOURCE=spotify  # fuente preferida por defecto
FALLBACK_SOURCE=lastfm   # segunda opción
THIRD_SOURCE=deezer     # tercera opción

# Modo Demo (false para producción)
NEXT_PUBLIC_DEMO_MODE=false
