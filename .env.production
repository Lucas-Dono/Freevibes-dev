# Este archivo sirve como referencia para configurar las variables de entorno en Vercel
# No incluyas valores reales aquí, configura los valores directamente en el dashboard de Vercel

# NextJS
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://tu-dominio-vercel.vercel.app

# MongoDB
MONGODB_URI=

# JWT
JWT_SECRET=
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=
JWT_REFRESH_EXPIRATION=7d

# Spotify API
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=

# YouTube API
YOUTUBE_API_KEY=

# API URLs (en producción, usamos rutas relativas)
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_NODE_API_URL=https://musicverse-node-api.onrender.com
BACKEND_URL=

# Cache
CACHE_TTL=600

# Configuración de despliegue
USE_EXTERNAL_PYTHON_API=false
USE_EXTERNAL_NODE_API=true 