<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface_primary"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Album Art -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/ivAlbumArt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/surface_secondary"
                app:srcCompat="@drawable/ic_logo"
                tools:src="@tools:sample/avatars" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay" />

            <!-- Play Button Overlay -->
            <ImageView
                android:id="@+id/ivPlayButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/primary"
                android:src="@drawable/ic_play"
                android:padding="12dp"
                android:alpha="0.9"
                android:contentDescription="@string/play_track" />

            <!-- Like Button -->
            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/overlay_dark"
                android:src="@drawable/ic_heart_outline"
                android:padding="6dp"
                android:contentDescription="@string/like_track" />

        </FrameLayout>

        <!-- Track Info -->
        <TextView
            android:id="@+id/tvTrackTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="4dp"
            tools:text="Bohemian Rhapsody" />

        <TextView
            android:id="@+id/tvArtistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artist Name"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Queen" />

        <!-- Duration -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3:45"
            android:textSize="11sp"
            android:textColor="@color/text_tertiary"
            android:layout_marginTop="4dp"
            tools:text="5:55" />

    </LinearLayout>

</androidx.cardview.widget.CardView>