# Backend (Node.js) Environment Variables

# Puerto del servidor
SERVER_PORT=3001

# URLs para CORS y configuración
CORS_ORIGIN=https://musicplayer-web.vercel.app
NODE_ENV=production

# Conexión al servicio Python (URL base)
PYTHON_API_BASE_URL=http://localhost:5000

# API Keys para servicios externos
LASTFM_API_KEY=your_lastfm_api_key
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Configuración para modo demo (opcional para desarrollo)
DEMO_MODE=false

# Configuración JWT para autenticación Android
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# Configuración específica para Android
MIN_ANDROID_VERSION=1.0.0
ANDROID_UPDATE_URL=https://play.google.com/store/apps/details?id=com.freevibes.android
